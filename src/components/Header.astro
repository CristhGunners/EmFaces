---
import '@fontsource/pattaya';
import '@fontsource-variable/raleway';

interface Props {}

const {} = Astro.props;
---

<header
  class="py-4 flex flex-col items-center justify-center space-y-4 sm:flex-row sm:justify-between sm:space-y-0"
>
  <h1>
    <a href="/" class=`font-pattaya text-pink-600 text-4xl hover:text-pink-700`
      >EmFaces</a
    >
  </h1>
  <div class="flex items-center justify-center space-x-4">
    <a
      href="/emoticons/emfaces.zip"
      class="font-raleway py-2 px-6 rounded-full text-xl text-white bg-pink-600 font-bold hover:bg-pink-700"
      download>Download All</a
    >
    <a
      href="/about"
      class="font-raleway text-xl text-black font-bold hover:text-pink-600"
      >About</a
    >
  </div>
</header>
