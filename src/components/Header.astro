---
import '@fontsource-variable/raleway';
import '@fontsource/pattaya';

interface Props {}

const {} = Astro.props;
---

<header
  class="flex flex-col items-center justify-center space-y-4 py-4 sm:flex-row sm:justify-between sm:space-y-0"
>
  <h1>
    <a
      href="https://cristhgunners.github.io/EmFaces/"
      class=`font-pattaya text-4xl text-pink-600 hover:text-pink-700`>EmFaces</a
    >
  </h1>
  <div class="flex items-center justify-center space-x-4">
    <a
      href="https://cristhgunners.github.io/EmFaces/emoticons/emfaces.zip"
      class="rounded-full bg-pink-600 px-6 py-2 font-raleway text-xl font-bold text-white hover:bg-pink-700"
      download>Download All</a
    >
    <a
      href="https://cristhgunners.github.io/EmFaces/about"
      class="font-raleway text-xl font-bold text-black hover:text-pink-600"
      >About</a
    >
  </div>
</header>
