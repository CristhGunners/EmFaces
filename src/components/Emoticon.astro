---
import '@fontsource-variable/raleway';

interface Props {
  name: string;
  bgColor: string;
  filename: string;
}

const { name, bgColor, filename } = Astro.props;
---

<div
  class=`py-10 px-4 ${bgColor} space-y-6 flex flex-col items-center justify-between`
>
  <h2 class="text-center font-raleway text-xl font-bold text-white">{name}</h2>
  <img
    src=`https://cristhgunners.github.io/EmFaces/emoticons/${filename}.svg`
    alt={name}
    class="mx-auto block w-60 transform cursor-zoom-in transition duration-300 hover:scale-105"
  />
  <a
    href=`/emoticons/${filename}.svg`
    class=`mx-auto transform rounded-full border-2 border-white px-4 py-2 font-raleway text-xl font-bold text-white transition duration-300 hover:bg-black hover:bg-opacity-25`
    download>Download</a
  >
</div>
